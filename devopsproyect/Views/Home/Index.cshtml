@{
    ViewData["Title"] = "Programacion de Citas";

}

<div class="d-flex justify-content-center">
    <img src="https://clinicaces.edu.co/wp-content/uploads/2022/03/logo-vertical-clinica-CES.png" class="brand_logo" alt="Logo">
</div>
<head>
  <!-- Add the Bootstrap stylesheet -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css">

  <!-- Add your custom CSS styles -->
  <style>


        body {
        background-color: #142c4c;

        
        }

        .brand_logo{
            max-width: 15%;
            height: 15%;
        }


        form {
            background-color: white;
            width: 730px;
            height: 650;
            margin: 30px auto;
            padding: 30px;
            border-radius: 30px;
            background-image: url('https://cdn.pixabay.com/photo/2016/10/09/22/52/abstract-1724608_960_720.png');
            background-repeat: repeat;
            background-size: cover;
            background-position: center center;
            box-shadow: 0 0 10px rgba(0,0,0,0.5);
        }

        form label {
            color: #142c4c;
        }

        form input[type="text"],
        form input[type="email"],
        form input[type="tel"],
        form input[type="date"],
        form input[type="time"],
        form input[type="text"] {
            background-color: #D9D9D9;
            border: none;
            border-radius: 30px;
            color: black;
            margin-bottom: 0.5rem;
            padding: 0.5rem;
            font-family: 'Arial', sans-serif;
            font-size: 16px;
        }

        form input[type="text"]:focus,
        form input[type="email"]:focus,
        form input[type="tel"]:focus,
        form input[type="date"]:focus,
        form input[type="time"]:focus,
        form input[type="text"]:focus 


        .form-label {
            margin-top: 1.5rem;
            margin-bottom: 0.5rem;
        }



        .form-control:focus {
        box-shadow: none;
        }

        .form-control::placeholder {
        color: white;
        }

        .form-control:invalid {
        border-bottom: 1px solid red;
        }

        .form-control:valid {
        border-bottom: 1px solid green;
        }

        .form-control:focus:invalid {
        border-bottom: 1px solid red;
        }

        .form-control:focus:valid {
        border-bottom: 1px solid green;
        }

        button[type="submit"] {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 1.0rem;
        margin-top: 1.5rem;
        cursor: pointer;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        width: 400px;
        margin-left: 22%;
        margin-right: 22%;
        }

        button[type="submit"]:hover {
        background-color: #007bff;
        }

        .needs-validation:invalid button[type="submit"]:hover {
        background-color: red;
        }

        .needs-validation:valid button[type="submit"]:hover {
        background-color: green;
        }

        .alert-danger {
        background-color: #142c4c;
        border-color: #142c4c;
        color: #721c24;
        text-align: center;
        font-size: medium;
        font-weight: bold;
        border-radius: 0.5rem;
        margin-top: 1rem;
        padding: 0.75rem;
        }

        .custom-control-label {
        color: white;
        }
        .navbar-brand {
         margin-right: 50px;
        }
        select.form-select {
        background-color: #D9D9D9;
        border: none;
        border-radius: 30px;
        color: #142c4c;
        margin-bottom: 0.5rem;
        padding: 0.5rem;
        font-family: 'Arial', sans-serif;
        font-size: 16px;
        width: 100%;
        }

        .form-control::placeholder {
            color: #142c4c;
        }









  </style>
</head>

<form action="@Url.Action("Guardar", "Guardar")" method="post" class="needs-validation">
    <div class="mb-3">
        <label for="Nombrecompleto" class="form-label">Nombre completo Paciente:</label>
        <input type="text" name="Nombre" class="form-control" maxlength="30" id="Nombrecompleto" placeholder="Ingrese su nombre completo" pattern="[A-Za-záéíóúÁÉÍÓÚñÑ\s]+" title="Ingrese solo letras y espacios" required>
        <div class="invalid-feedback">
            Por favor ingrese el nombre completo del Paciente.
        </div>
    </div>
    <div class="mb-3">
        <label for="Correoelectronico" class="form-label">Correo electronico del Paciente:</label>
        <input type="email" name="Correo" class="form-control"  maxlength="30" id="Correoelectronico" placeholder="Ingrese su direccion de correo electronico" required>
        <div class="invalid-feedback">
            Por favor ingrese una direccion de correo electronico valida.
        </div>
    </div>
    <div class="mb-3">
        <label for="Numerodetelefono" class="form-label">Numero de telefono del Paciente:</label>
        <input type="tel" name="Numero" class="form-control" maxlength="10" id="Numerodetelefono" placeholder="Ingrese su numero de telefono" required pattern="[0-9]{10}">
        <div class="invalid-feedback">
            Por favor ingrese un numero de telefono valido.
        </div>
    </div>
    <div class="mb-3">
        <label for="appointmentDate" class="form-label">Fecha de cita para el Paciente:</label>
        <input type="date" name="Fecha" class="form-control maxlength="10" datepicker" id="appointmentDate"  required>
        <div class="invalid-feedback">
            Por favor ingrese una fecha valida.
        </div>
    </div>

    <div class="mb-3">
        <label for="appointmentTime" class="form-label">Horario de Programacion para el Paciente:</label>
        <input type="time" name="Horario" class="form-control" id="appointmentTime" required pattern="[0-9]{2}:[0-9]{2} [AaPp][Mm]">
        <div class="invalid-feedback">
            Por favor ingrese un horario valido.
        </div>
    </div>

    <div id="alert-container" class="mb-3">
    </div>

    <div class="mb-3">
        <label for="appointmentReason" class="form-label">Especialidad de Cirugia para el Paciente:</label>

        <select name="Especialidad" class="form-select" id="appointmentReason" required>
                <option value="">Seleccione una especialidad</option>
                <option value="Anestesiologia">Anestesiologia</option>
                <option value="Cirugia Cabeza Cuello">Cirugia Cabeza Y Cuello</option>
                <option value="Cirugia Cardiovascular">Cirugia Cardiovascular</option>
                <option value="Cirugia General">Cirugia General</option>
                <option value="Cirugia Hepatobiliar">Cirugia Hepatobiliar</option>
                <option value="Cirugia Maxilofacial">Cirugia Maxilofacial</option>
                <option value="Gastroenterología">Gastroenterología</option>
                <option value="Cirugia Plastica">Cirugia Plastica</option>
                <option value="Cirugia Vascular">Cirugia Vascular</option>
                <option value="Intervencion Endoscopista">Intervencion Cirujano Endoscopista</option>
                <option value="Dermatologia">Dermatologia</option>
                <option value="Gastroenterologia">Gastroenterologia</option>
                <option value="Ginecologia">Ginecologia</option>
                <option value="Neumologia">Neumologia</option>
                <option value="Neurocirugia">Neurocirugia</option>
                <option value="Odontologia">Odontologia</option>
                <option value="Oftalmologia">Oftalmologia</option>
                <option value="Ortopedia">Ortopedia</option>
                <option value="Otorrinolaringologia">Otorrino laringologia</option>
                <option value="Radiologia">Radiologia</option>
                <option value="Coloproctologo">Coloproctologo</option>
                <option value="Otologo">Otologo</option>
                <option value="Cirugia de Torax">Cirugia De Torax</option>


    </select>

    <div class="invalid-feedback">
        Por favor seleccione una especialidad.
    </div>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>



